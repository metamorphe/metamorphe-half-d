<%= form_for @swatch, :html => {:multipart => true}  do |f| %>

   <% if @swatch.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@swatch.errors.count, "error") %> prohibited this swatch from being saved:</h2>

        <ul>
        <% @swatch.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
       <%= f.label :layer_id %><br>
    <%= select("swatch", "layer_id", Layer.all.collect {|p| [ p.name, p.id ] }, :class=> "form-control") %>
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control"%>
    </div>
    <!-- <div class="field">
      <%= f.label :is_dynamic %><br>
      <%= check_box "swatch", :is_dynamic%>
    </div> -->

     <div class="field">
      <%= f.label :thumbnail %><br>
      <%= f.file_field :thumbnail, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :bump_map %><br>
      <%= f.file_field :bump_map, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :base_height %><br>
      <%= f.text_field :base_height, class: "form-control", value: @swatch.base_height or 2.0%>
    </div>
    <div class="field">
      <%= f.label :displacement %><br>
      <%= f.text_field :displacement, class: "form-control", value: @swatch.displacement or 2.0%>
    </div>
    <div class="field">
      <%= f.label :height.to_s + " (mm)" %><br>
      <%= f.text_field :height, class: "form-control", value: @swatch.height or 70%>
    </div>
    <div class="field">
      <%= f.label :width.to_s + " (mm)" %><br>
      <%= f.text_field :width, class: "form-control", value: @swatch.width or 70%>
    </div>


  <!--   <div class="field">
      <%= f.label :depth.to_s + " (mm)" %><br>
      <%= f.text_field :depth, value: "4.0"%>
    </div> -->


    <div class="field">
      <label> STL (optional) </label><br>
      <%= f.file_field :stl, class: "form-control"%>
    </div>
    <br>

  <div class="actions">
    <%= f.submit :class=>"btn btn-danger"%>
  </div>
  
<% end %>
