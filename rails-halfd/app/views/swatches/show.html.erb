
<div class='col-xs-5'>
  <div class="img-wrapper-large">
    <%= image_tag(@swatch.thumbnail, :width => "100%") if @swatch.thumbnail.present? %>
  </div>
</div>
<div class="col-xs-7">
  <div class="col-xs-6">
    <h2>
      <em> <%= @swatch.layer.name %></em>
      <%= @swatch.name %> 
    </h2>
    <p> <em> author </em> <%= link_to @swatch.user.email, user_path(@swatch.user)%></p>
  </div>
  <div class="col-xs-6">
    <div class="img-wrapper">
      <%= image_tag(@swatch.bump_map, :width => "100%") if @swatch.bump_map.present? %>
    </div>
  </div>
<p>
  <h3> Dimensions </h3>

</p>

  <table class="table">
    <tr>
      <th>W</th>
      <th>H</th>
      <th>D</th>
      <th>&Delta;</th>
      <th>BH</th>
    </tr>
    <tr>
      <td><%=@swatch.width%></td>
      <td><%=@swatch.height%></td>
      <td><%=@swatch.depth%></td>
      <td> <%=@swatch.displacement%></td>
      <td> <%=@swatch.base_height%></td> 
    </tr>
  </table>

  <%=link_to @swatch.stl, :class => "btn btn-default" do %>
    <%= glyph("download") %> STL 
  <% end %>
   <%=link_to threed_swatch_path(@swatch, {:texture => @swatch.bump_map_identifier.split(".")[0], :engine => "shade"}), :class => "btn btn-default" do %>
    <%= glyph("eye") %> View 3D 
  <% end %>
  

  <br> 
  <%= link_to 'Edit', edit_swatch_path(@swatch) %> |
  <%= link_to 'Back', swatches_path %>
</div>



