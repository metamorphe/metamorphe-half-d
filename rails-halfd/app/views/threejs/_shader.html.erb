<!-- Shader Code -->
<script id="vertexShader" type="x-shader/x-vertex">
	void main() {
	  gl_Position = projectionMatrix *
	                modelViewMatrix *
	                vec4(position,1.0);
	}
</script>

<!-- fragment shader a.k.a. pixel shader -->
<script id="fragmentShader" type="x-shader/x-vertex">
	void main() {
	  gl_FragColor = vec4(1.0,  // R
	                      0.0,  // G
	                      1.0,  // B
	                      1.0); // A
	}
</script>


